{
  "name": "licences",
  "version": "0.1.0",
  "description": "Licences  Application",
  "main": "server.js",
  "engines": {
    "node": "^14.16.0",
    "npm": "^7.2.4"
  },
  "scripts": {
    "postinstall": "husky install",
    "copy-views": "cp -R server/views/ dist/server/views/ && cp -R mock-server/routes/images dist/mock-server/routes",
    "watch-views": "nodemon --watch server/views -e pug -x npm run copy-views",
    "watch-ts": "tsc -w",
    "watch-node": "DEBUG=gov-starter-server* nodemon --watch dist/ dist/server.js",
    "build": "npm run clean && npm run css-build && tsc && npm run copy-views",
    "start": "node dist/server.js",
    "start:dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"Views,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-views\" \"npm run watch-ts\" \"npm run watch-node\"",
    "start:feature": "set -a; source feature.env; set +a && npm run build && npm start",
    "start-mocks": "node mock-server/start.js",
    "test": "jest --runInBand --testPathPattern=/test/.*",
    "integration-test": "jest --runInBand --testPathPattern=/integration_test/.*",
    "lint": "eslint .",
    "typecheck": "tsc",
    "record-build-info": "node ./bin/record-build-info",
    "css-build": "./bin/build-css",
    "clean": "rm -rf dist/* public/* .port.tmp *.log build/* uploads/* test-results.xml",
    "db:knex": "knex",
    "db:knex-migrate": "knex-migrate",
    "db:seed": "knex seed:run --env standard",
    "security_audit": "npx audit-ci --config audit-ci.json"
  },
  "lint-staged": {
    "*.{js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "seeds/*",
      "node_modules/*",
      "integration-tests/*"
    ],
    "delay": 2500,
    "ext": "js,json,html,pug"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noms-digital-studio/licences.git"
  },
  "author": "HMPPS Digital Studio",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/noms-digital-studio/licences/issues"
  },
  "homepage": "https://github.com/noms-digital-studio/licences#readme",
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/test/**/?(*.)(spec|test).{ts,js,jsx,mjs}",
      "<rootDir>/integration_test/**/?(*.)(spec|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test-results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "dependencies": {
    "@hapi/joi-date": "^2.0.1",
    "adm-zip": "0.5.9",
    "agentkeepalive": "^4.2.1",
    "applicationinsights": "^2.3.3",
    "applicationinsights-native-metrics": "0.0.7",
    "body-parser": "^1.20.0",
    "case": "^1.6.3",
    "compression": "^1.7.4",
    "concat-stream": "^2.0.0",
    "config": "3.3.7",
    "connect-flash": "^0.1.1",
    "connect-redis": "^6.1.3",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.0.0",
    "csurf": "^1.11.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-session": "1.17.3",
    "govuk_frontend_toolkit": "^9.0.1",
    "govuk_template_jinja": "^0.26.0",
    "govuk-elements-sass": "^3.1.3",
    "helmet": "^5.1.0",
    "joi": "17.6.0",
    "jquery": "^3.6.0",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "knex": "^2.1.0",
    "knex-migrate": "^1.7.4",
    "moment": "2.29.3",
    "moment-business-days": "^1.2.0",
    "nocache": "^3.0.4",
    "node-schedule": "^2.1.0",
    "notifications-node-client": "^5.1.1",
    "passport": "^0.6.0",
    "passport-oauth2": "^1.6.1",
    "path": "^0.12.7",
    "pg": "8.7.3",
    "pg-format": "^1.0.4",
    "poll-endpoint-for": "0.0.7",
    "pug": "3.0.2",
    "querystring": "^0.2.1",
    "ramda": "^0.28.0",
    "redis": "4.1.0",
    "request": "^2.88.2",
    "romannumerals": "^1.1.1",
    "string-hash": "^1.1.3",
    "superagent": "^7.1.6",
    "swagger-ui-express": "^4.4.0",
    "util": "^0.12.4",
    "uuid": "8.3.2",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@types/connect-flash": "^0.0.37",
    "@types/jest": "^27.4.1",
    "@types/node": "14.14.31",
    "@types/passport": "^1.0.8",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "audit-ci": "^6.3.0",
    "concurrently": "^7.2.1",
    "eslint": "^8.17.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "27.5.1",
    "jest-html-reporter": "3.4.2",
    "jest-junit": "^13.2.0",
    "lint-staged": "^13.0.1",
    "nock": "13.2.6",
    "node-sass": "^7.0.1",
    "nodemon": "2.0.16",
    "pdf-parse": "^1.1.1",
    "prettier": "^2.6.2",
    "supertest": "^6.2.3",
    "ts-jest": "^27.1.4",
    "typescript": "^4.7.3"
  },
  "bin": {
    "loadLicences": "./server/loadLicences.js",
    "saveLicences": "./server/saveLicences.js"
  }
}
