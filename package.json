{
  "name": "licences",
  "version": "0.1.0",
  "description": "Licences  Application",
  "main": "server.js",
  "engines": {
    "node": "^10.15",
    "npm": "^5.6.0"
  },
  "scripts": {
    "copy-views": "cp -R server/views/ dist/server/views/",
    "watch-views": "nodemon --watch server/views -e pug -x npm run copy-views",
    "watch-ts": "tsc -w",
    "watch-node": "DEBUG=gov-starter-server* nodemon --watch dist/ dist/server.js",
    "build": "npm run clean && npm run css-build && tsc && npm run copy-views",
    "start": "node dist/server.js",
    "start:dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"Views,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-views\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest",
    "test-ci": "jest --runInBand",
    "lint": "eslint .",
    "typecheck": "tsc",
    "record-build-info": "node ./bin/record-build-info",
    "css-build": "./bin/build-css",
    "clean": "rm -rf dist/* public/* .port.tmp *.log build/* uploads/* test-results.xml",
    "db:knex": "knex",
    "db:knex-migrate": "knex-migrate",
    "db:seed": "knex seed:run --env standard",
    "security_audit": "npx audit-ci --config audit-ci.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "NODE_ENV=dev && lint-staged && tsc"
    }
  },
  "lint-staged": {
    "*.{js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json}": [
      "prettier --write"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "seeds/*",
      "node_modules/*",
      "integration-tests/*"
    ],
    "delay": 2500,
    "ext": "js,json,html,pug"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noms-digital-studio/licences.git"
  },
  "author": "HMPPS Digital Studio",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/noms-digital-studio/licences/issues"
  },
  "homepage": "https://github.com/noms-digital-studio/licences#readme",
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/test/**/?(*.)(spec|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test-results/unit-test-reports.html"
        }
      ]
    ]
  },
  "dependencies": {
    "@ministryofjustice/express-template-to-pdf": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "adm-zip": "^0.4.14",
    "agentkeepalive": "^4.1.0",
    "applicationinsights": "^1.7.3",
    "applicationinsights-native-metrics": "0.0.5",
    "body-parser": "^1.19.0",
    "case": "^1.6.3",
    "compression": "^1.7.4",
    "config": "^3.3.1",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^2.0.0-beta.3",
    "csurf": "^1.11.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-request-id": "^1.4.1",
    "express-winston": "^4.0.3",
    "govuk-elements-sass": "^3.1.3",
    "govuk_frontend_toolkit": "^9.0.0",
    "govuk_template_jinja": "^0.26.0",
    "helmet": "^3.22.0",
    "joi": "^14.3.1",
    "joi-date-extensions": "^1.2.0",
    "joi-postcode": "^3.0.0",
    "jquery": "^1.12.4",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.20.13",
    "knex-migrate": "^1.7.4",
    "moment": "^2.24.0",
    "moment-business-days": "^1.1.3",
    "nocache": "^2.1.0",
    "node-schedule": "^1.3.2",
    "notifications-node-client": "^4.7.2",
    "passport": "^0.4.1",
    "passport-oauth2": "^1.5.0",
    "path": "^0.12.7",
    "pg": "^8.0.0",
    "pg-format": "^1.0.4",
    "poll-endpoint-for": "0.0.7",
    "pug": "^2.0.4",
    "querystring": "^0.2.0",
    "ramda": "^0.27.0",
    "request": "^2.88.2",
    "romannumerals": "^1.1.1",
    "string-hash": "^1.1.3",
    "superagent": "^5.2.2",
    "swagger-ui-express": "^4.1.4",
    "util": "^0.12.2",
    "uuid": "^7.0.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-config-prettier": "^6.10.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.2.7",
    "jest-html-reporter": "^3.0.0",
    "jest-junit": "^10.0.0",
    "lint-staged": "^10.1.1",
    "nock": "^12.0.3",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.3",
    "pdf-parse": "^1.1.1",
    "prettier": "2.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3"
  },
  "bin": {
    "loadLicences": "./server/loadLicences.js",
    "saveLicences": "./server/saveLicences.js"
  }
}
