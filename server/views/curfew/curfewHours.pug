extends ../layout

block content
    -var daysInAWeek = ["monday", "tuesday", "wednesday", "thursday", "friday", "saturday", "sunday"]

    div.back-link-container.smallPaddingTop
        a.link-back(href="javascript: window.history.back();") Back

    h2.heading-large Curfew hours

    div.pure-g.borderBottom.paddingBottom.largeMarginBottom
        .pure-u-1.pure-u-md-2-3
            p These are the standard HDC curfew hours which you can alter if you wish


    form(method="post")
        input(type="hidden" name="_csrf" value=csrfToken)
        input(type="hidden" name="nomisId" value=nomisId || '')

        div.pure-g.borderBottom.largePaddingBottom.largeMarginBottom
            div.pure-u-1.pure-u-md-4-5
                div.pure-g.smallPaddingBottom
                    div.pure-u-1-3.pure-u-md-4-24
                    div.pure-u-1-3.pure-u-md-10-24
                        span.bold From
                    div.pure-u-1-3.pure-u-md-10-24
                        span.bold Until

                for day in daysInAWeek
                    div.pure-g
                        div.pure-u-1-3.pure-u-md-4-24
                            span.bold.capitalize #{day}
                        div.pure-u-1-3.pure-u-md-10-24
                            div.tinyPaddingBottom
                                label(for=day+"From", class="form-label")
                                    div.pure-g.content-pull
                                        div.pure-u-1-3
                                            div.l-box
                                                input(name=day+"From", id=day+"From" class="form-control", value=data[day + 'From'] || "19:00", type="time")
                                        div.pure-u-2-3
                                            div.l-box.l-box--no-left
                                                span.hours-text hours each evening

                        div.pure-u-1-3.pure-u-md-10-24
                            div.tinyPaddingBottom
                                label(for=day+"Until", class="form-label")
                                    div.pure-g.content-pull
                                        div.pure-u-1-3
                                            div.l-box
                                                input(name=day+"Until", id=day+"Until" class="form-control", value=data[day + 'Until'] || "07:00", type="time")
                                        div.pure-u-2-3
                                            div.l-box.l-box--no-left
                                                span.hours-text hours the following morning

        include ../includes/formButtons

