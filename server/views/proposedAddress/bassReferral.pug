extends ../formTemplates/formTemplate

block question
    | Has the offender requested a BASS referral?

block formItems
    div.form-group.inline.smallPaddingTop

        div.multiple-choice(data-target="bassFollowUps")
            input#yes(type="radio" checked=data && data.decision === 'Yes' name="decision" value="Yes")
            label(for="yes") Yes
        div.multiple-choice
            input#no(type="radio" checked=data && data.decision === 'No' name="decision" value="No")
            label(for="no") No

    div#bassFollowUps.pure-u-1-2(class=errorObject.proposedTown || errorObject.proposedCounty ? 'form-group-error' : 'panel panel-border-narrow js-hidden')
        if errorObject.proposedTown
            span.error-message #{errorObject.proposedTown}
        div.form-group
            label(for='proposedTown') Proposed town:
            input(type='text' name='proposedTown' id='proposedTown' class='form-control' value=data && data.proposedTown aria-label="Proposed town")
        if errorObject.proposedCounty
            span.error-message #{errorObject.proposedCounty}
        div.form-group
            label(for='proposedCounty') Proposed county or borough:
            input(type='text' name='proposedCounty' id='proposedCounty' class='form-control' value=data && data.proposedCounty aria-label="Proposed county or borough")
