mixin otherResidents(type, savedAddress)
    - var savedResidents = savedAddress.residents || []
    - var residentsToShow = savedResidents.length > 3 ? savedResidents.length : 3
    - var n = 0
    div.otherResidentsInput.largePaddingBottom
        div.pure-g
            div.pure-u-1
                h4.heading-small Other residents+other
                p.font-xsmall Only enter an age if the person is under 18
        div.pure-g
            div.pure-u-sm-5-12 Name
            div.pure-u-sm-1-6.padLeftRight15 Age
            div.pure-u-sm-5-12 Relation to offender

        while n < residentsToShow
            div.pure-g.smallPaddingBottom.otherResident
                div.pure-u-sm-5-12
                    input.form-control.residentName(name=type+"[residents]["+n+"][name]" value=savedResidents[n] && savedResidents[n].name)
                div.pure-u-sm-1-6.padLeftRight15
                    input.form-control.residentAge(name=type+"[residents]["+n+"][age]" value=savedResidents[n] && savedResidents[n].age)
                div.pure-u-sm-5-12
                    input.form-control.residentRelation(name=type+"[residents]["+n+"][relation]" value=savedResidents[n] && savedResidents[n].relation)
            - n++
