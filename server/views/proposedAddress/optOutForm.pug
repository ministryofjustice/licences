extends ../layout

block content

    div.pure-g.pure-u-1
        div.back-link-container.smallPaddingTop
            a.link-back(href="javascript: window.history.back();") Back

        h2.heading-large HDC opt out decision

    form(method="post")
        input(type="hidden" name="_csrf" value=csrfToken)
        input(type="hidden" name="nomisId" value=nomisId || '')
        div.smallPaddingTop.paddingBottom.largeMarginBottom
            div.largePaddingBottom
                div.form-group.inline.smallPaddingTop
                    p Has the prisoner decided to opt out of the HDC process?

                    div.multiple-choice(data-target="optOutForm")
                        input#optOutYes(type="radio" checked=data && data.decision === 'Yes' name="decision" value="Yes")
                        label(for="optOutYes") Yes
                    div.multiple-choice
                        input#optOutNo(type="radio" checked=data && data.decision === 'No' name="decision" value="No")
                        label(for="optOutNo") No

                div#optOutForm.panel.panel-border-narrow.js-hidden
                    label(for='optOutDetails') Please give details
                    textarea(name='reason' id='optOutDetails' class='form-control' rows='4')
                        if data && data.reason
                            | #{data.reason}

            div.paddingBottom.smallPaddingTop
                div.pure-u-1.inlineButtons
                    input#continueBtn.requiredButton.button(type="submit" value="Save and continue")
                    a#backBtn.requiredButton.button.button-secondary(href="/hdc/taskList/" + nomisId role="button") Return to tasklist
