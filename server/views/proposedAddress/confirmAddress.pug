extends ../layout
include includes/addressDetail

block content

    -var addresses = data.addresses || []

    div.pure-g.pure-u-1
        div.back-link-container.smallPaddingTop
            a.link-back(href="javascript: window.history.back();") Back

        h2.heading-large.paddingBottom Confirm address details

        if addresses.length === 0
            h3.heading-medium No address to view

        if addresses.length === 1
            +addressDetail('0', addresses[0])

        if addresses.length === 2
            div.borderBottomLight.largeMarginBottom
                +addressDetail('0', addresses[0])

            h3.heading-medium Alternative address
            +addressDetail('1', addresses[1])

    div.paddingBottom.smallPaddingTop
        div.pure-u-1.inlineButtons
            a#continueBtn.requiredButton.button(href=nextPath.path + nomisId role="button") Save and continue
            a#editLink.smallMarginTop(href="/hdc/proposedAddress/curfewAddress/" + nomisId role="button") Edit details
