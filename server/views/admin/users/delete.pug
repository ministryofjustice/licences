extends ../../layout

block content

    div.back-link-container.smallPaddingTop
        a#back.link-back(href="/admin/") Back

    h2.heading-large Delete RO user?


    form#deleteUserForm(method='POST')
        input(type="hidden" name="_csrf" value=csrfToken)
        input(type="hidden" name="nomisId" value=roUser.nomis_id)

        div#user.pure-g
            div.pure-u-1
                table#users.largeMarginBottom
                    thead
                        tr
                            th Nomis Username
                            th Delius Staff ID
                            th First
                            th Last
                            th Organisation
                            th Job Role
                            th Email
                            th Telephone
                            th
                    tbody
                        tr.user
                            td.nomisId
                                if roUser.nomis_id
                                    | #{roUser.nomis_id}
                            td.deliusId
                                if roUser.staff_id
                                    | #{roUser.staff_id}
                            td.firstName
                                if roUser.first_name
                                    | #{roUser.first_name}
                            td.lastName
                                if roUser.last_name
                                    | #{roUser.last_name}
                            td.organisation
                                if roUser.organisation
                                    | #{roUser.organisation}
                            td.jobRole
                                if roUser.job_role
                                    | #{roUser.job_role}
                            td.email
                                if roUser.email
                                    | #{roUser.email}
                            td.telephone
                                if roUser.telephone
                                    | #{roUser.telephone}


        div.paddingBottom.smallPaddingTop
            div.pure-u-1.inlineButtons
                input#continueBtn.requiredButton.button.smallMarginTop(type="submit" value="Delete user")
                a#backBtn.requiredButton.button.button-secondary.smallMarginTop(href="/admin/roUsers" role="button") Cancel

