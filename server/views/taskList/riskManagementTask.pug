div.largeMarginBottom.borderTop
    h2.heading-medium Risk management and victim liaison

    div.borderBottomLight.largeMarginBottom

    div.pure-g
        div.pure-u-3-4
            if licenceStatus.tasks.riskManagement === 'DONE'
                if licenceStatus.decisions.riskManagementNeeded
                    div Risk management required
                else
                    div No risks
                if licenceStatus.decisions.victimLiasionNeeded
                    div Victim liaison required
                else
                    div No victim liaison required
            else
                | Not yet confirmed
        div.pure-u-1-4
            if licenceStatus.tasks.riskManagement === 'UNSTARTED'
                a.taskListAction.center.button(href="/hdc/risk/riskManagement/" + prisonerInfo.offenderNo)
                    | Start
            else
                a.taskListAction.center.button.button-secondary(href="/hdc/risk/riskManagement/" + prisonerInfo.offenderNo)
                    | View

