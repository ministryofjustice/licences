div.taskListItem.smallPaddingBottom
    h2.heading-medium Final checks

    div.pure-g
        div.pure-u-3-4
            if licenceStatus.tasks.finalChecks === 'DONE'
                div.padLeftRight15
                    ul
                        if licenceStatus.decisions.seriousOffence
                            li.list-bullet.alert#seriousOffenceAnswer The offender is under investigation or been charged for a serious offence in custody
                        else
                            li.list-bullet#seriousOffenceAnswer The offender is not under investigation or been charged for a serious offence in custody

                        if licenceStatus.decisions.onRemand
                            li.list-bullet.alert#onRemandAnswer The offender is on remand
                        else
                            li.list-bullet#onRemandAnswer The offender is not on remand

                        if licenceStatus.decisions.confiscationOrder
                            li.list-bullet.alert#confiscationOrderAnswer The offender is subject to a confiscation order
                        else
                            li.list-bullet#confiscationOrderAnswer The offender is not subject to a confiscation order
            else
                | Not completed
        div.pure-u-1-4.center
            if user.role === 'CA'
                +startContinueView(licenceStatus.tasks.finalChecks, "/hdc/finalChecks/seriousOffence/" + prisonerInfo.bookingId)

