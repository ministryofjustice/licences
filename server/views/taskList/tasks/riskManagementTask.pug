div.paddingBottom
    h2.heading-medium Risk management and victim liaison

    - var alertBoxNeeded = licenceStatus.decisions.awaitingRiskInformation
    - var riskText = licenceStatus.decisions.riskManagementNeeded ? 'Risk management required' : 'No risks'
    - var victimLiasionText = licenceStatus.decisions.victimLiasionNeeded ? 'Victim liaison required' : 'No victim liaison required'

    div.pure-g
        div.pure-u-1.pure-u-md-3-4
            if licenceStatus.tasks.riskManagement === 'DONE'

                if alertBoxNeeded
                    div.pure-g
                        div.pure-u-1.pure-u-sm-3-5.notice-container
                            div.notice
                                i.icon.icon-important
                                    span.visually-hidden Warning

                                strong.bold-small Still waiting for information

                else
                    div #{riskText}
                    div #{victimLiasionText}

            else
                | Not completed

        div.pure-u-1.pure-u-md-1-4.center
            -var roleCanModify = user.role === 'RO' || user.role === 'CA'
            -var editable = licenceStatus.stage === 'PROCESSING_CA' && user.role === 'CA'

            if (postApproval && roleCanModify || editable)
                a.taskListAction.center.button.button-secondary(href="/hdc/risk/riskManagement/" + prisonerInfo.bookingId) View/Edit

            else if user.role === 'RO'
                +startContinueView(licenceStatus.tasks.riskManagement, "/hdc/risk/riskManagement/" + prisonerInfo.bookingId)

            else
                a.taskListAction.center.button.button-secondary(href="/hdc/review/risk/" + prisonerInfo.bookingId) View
