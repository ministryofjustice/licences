div.largeMarginBottom.borderTop
    h2.heading-medium Proposed curfew address

    div.borderBottomLight.largeMarginBottom

    if bassReferralRequested || optOut == 'Yes'
        div.pure-g
            div.pure-u-9-12
                if bassReferralRequested
                    p BASS referral requested
                if optOut
                    p Opted out

    else
        div.pure-g
            div.pure-u-9-12
                if !curfewAddressApproved
                    | Not yet approved
                else
                    | Curfew address approved
            div.pure-u-1-4
                a.taskListAction.center.button(href="/hdc/licenceConditions/curfewAddressReview/" + prisonerInfo.offenderNo)
                    if proposedAddress
                        | View
                    else
                        | Start
