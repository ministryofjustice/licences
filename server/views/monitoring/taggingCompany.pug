extends ../layout
include ../includes/errorBannerWithDetail

block content

    div.pure-g
        div.pure-u-1
            include ../includes/back
            include ../includes/personalDetailsSummary
            +errorBannerWithDetail(errorObject, [
                {field: 'telephone', message: 'Enter a valid telephone number'}
            ])

    div.pure-g.largePaddingBottom
        div.pure-u-2-3
            h2.heading-large Enter tagging company details

    form#reportingForm(method='POST')
        input(type="hidden" name="_csrf" value=csrfToken)
        input(type="hidden" name="nomisId" value=nomisId)
        input(type="hidden" name="templateName" value=templateName)

        div#address.pure-g
            div#error-anchor.pure-u-1-6
                div.form-group
                    label.form-label(for="telephone") Telephone number
                    input#telephone.form-control(name="telephone" type="text" value=data.telephone)

        div.paddingTop
            include ../includes/saveAndReturn
