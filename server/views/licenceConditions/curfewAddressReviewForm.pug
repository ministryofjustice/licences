extends ../layout

block content

    div.pure-g.pure-u-1
        div.borderBottomLight
            div.back-link-container.smallPaddingTop
                a.link-back(href="javascript: window.history.back();") Back

            h2.heading-large Proposed curfew address

            p The following discharge addresshave been requested by the offender.

            include ../proposedAddress/includes/preferredAddress

        h3.heading-medium Address check confirmation

        form(method="post")
            input(type="hidden" name="_csrf" value=csrfToken)
            input(type="hidden" name="nomisId" value=nomisId || '')
            div.pure-g.largePaddingBottom
                div.pure-u-1.pure-u-sm-5-12.pure-g
                    div.form-group.inline
                        p Does the homeowner/landlord give informed consent to HDC at the address?

                        div.multiple-choice(data-target="landLordHtcConsentForm")
                            input#hdcConsentYes(type="radio" checked=data.landLordConsent === 'Yes' name="landLordHDCConsent" value="Yes")
                            label(for="hdcConsentYes") Yes
                        div.multiple-choice
                            input#hdcConsentNo(type="radio" checked=data.landLordConsent === 'No' name="landLordHDCConsent" value="No")
                            label(for="hdcConsentNo") No

                        div#landLordHtcConsentForm.panel.panel-border-narrow.js-hidden
                            include includes/landlordHDCConsent

                    div.form-group.inline
                        p Could this person be managed safely at this address?

                        div.multiple-choice
                            input#managedSafelyYes(type="radio" checked=data.landLordConsent === 'Yes' name="managedSafely" value="Yes")
                            label(for="managedSafelyYes") Yes
                        div.multiple-choice(data-target="managedSafelyForm")
                            input#managedSafely(type="radio" checked=data.landLordConsent === 'No' name="managedSafely" value="No")
                            label(for="managedSafelyNo") No

                        div#managedSafelyForm.panel.panel-border-narrow.js-hidden
                            label(for="managedSafelyReasons") Please give details
                            textarea(class="form-control" name="managedSafelyReasons" id="managedSafelyReasons" rows="4" value=data.managedSafelyreason)

            include ../includes/formButtons
