extends ../layout

block content

    div.pure-g.pure-u-1
        div.borderBottomLight
            div.back-link-container.smallPaddingTop
                a.link-back(href="javascript: window.history.back();") Back

            h2.heading-large Proposed curfew address

            p The following discharge addresshave been requested by the offender.

            include ../proposedAddress/includes/preferredAddress

        h3.heading-medium Address check confirmation

        form(method="post")
            input(type="hidden" name="_csrf" value=csrfToken)
            input(type="hidden" name="nomisId" value=nomisId || '')
            div.pure-g.largePaddingBottom
                div.pure-u-1.pure-u-sm-5-12.pure-g
                    div.form-group.inline
                        p Does the homeowner/landlord give informed consent to HDC at the address?

                        div.multiple-choice(data-target="consentForm")
                            input#hdcConsentYes(type="radio" checked=data.consent === 'Yes' name="consent" value="Yes")
                            label(for="hdcConsentYes") Yes
                        div.multiple-choice
                            input#hdcConsentNo(type="radio" checked=data.consent === 'No' name="consent" value="No")
                            label(for="hdcConsentNo") No

                        div#consentForm.panel.panel-border-narrow.js-hidden
                            include includes/landlordConsent

                    div.form-group.inline
                        p Could this person be managed safely at this address?

                        div.multiple-choice
                            input#deemedSafeYes(type="radio" checked=data.deemedSafe === 'Yes' name="deemedSafe" value="Yes")
                            label(for="deemedSafeYes") Yes
                        div.multiple-choice(data-target="managedSafelyForm")
                            input#deemedSafeNo(type="radio" checked=data.deemedSafe === 'No' name="deemedSafe" value="No")
                            label(for="deemedSafeNo") No

                        div#managedSafelyForm.panel.panel-border-narrow.js-hidden
                            label(for="safetyDetails") Please give details
                            textarea(class="form-control" name="safetyDetails" id="safetyDetails" rows="4" value=data.safetyDetails)

            include ../includes/formButtons
