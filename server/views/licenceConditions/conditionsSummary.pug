extends ../layout

include ../review/includes/additionalConditions
block content

    div.back-link-container.smallPaddingTop
        a.link-back(href="javascript: window.history.back();") Back

    div.largePaddingBottom
        if data.licenceConditions && data.licenceConditions.length > 0
            h2.heading-medium Additional conditions
            p The additional conditions you have selected are displayed below. You can add more or continue.
            div.borderBottomLight
            +additionalConditions('editable')

        else
            h2.heading-medium You have not selected any conditions.

    a#addAnother.button.button-secondary.largeMarginBottom(href="/hdc/licenceConditions/additionalConditions/" + nomisId role="button")
        if data.licenceConditions && data.licenceConditions.length > 0
            |Add another condition
        else
            |Add additional condition

    div.paddingBottom.smallPaddingTop
        div.pure-u-1.inlineButtons
            a#continueBtn.requiredButton.button.smallMarginTop(href=nextPath.path + nomisId role="button") Save and return to task list
