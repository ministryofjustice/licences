div.pure-g.paddingBottom
  div.pure-u-3-4
    label(for='courseOrCentre') Name of course/centre
    textarea(name='courseOrCentre' id='courseOrCentre' class='form-control' rows='2' aria-label="Name of course and centre")
      if condition.user_submission && condition.user_submission.courseOrCentre
        | #{condition.user_submission.courseOrCentre}

- var behaviours = condition.user_submission && condition.user_submission.abuseAndBehaviours || []
div.govuk-fieldset
  div.multiple-choice
    input(id='alcohol' type='checkbox' name='abuseAndBehaviours' value='alcohol' checked=behaviours.includes('alcohol'))
    label(for='alcohol') alcohol
  
  div.multiple-choice
    input(id='drug' type='checkbox' name='abuseAndBehaviours' value='drug' checked=behaviours.includes('drug'))
    label(for='drug') drug

  div.multiple-choice
    input(id='sexual' type='checkbox' name='abuseAndBehaviours' value='sexual' checked=behaviours.includes('sexual'))
    label(for='sexual') sexual

  div.multiple-choice
    input(id='violent' type='checkbox' name='abuseAndBehaviours' value='violent behaviour' checked=behaviours.includes('violent'))
    label(for='violent') violent

  div.multiple-choice
    input(id='gambling' type='checkbox' name='abuseAndBehaviours' value='gambling' checked=behaviours.includes('gambling'))
    label(for='gambling') gambling 

  div.multiple-choice
    input(id='solventAbuse' type='checkbox' name='abuseAndBehaviours' value='solvent abuse' checked=behaviours.includes('solvent abuse'))
    label(for='solventAbuse') solvent abuse

  div.multiple-choice
    input(id='anger' type='checkbox' name='abuseAndBehaviours' value='anger' checked=behaviours.includes('anger'))
    label(for='anger') anger

  div.multiple-choice
    input(id='debt' type='checkbox' name='abuseAndBehaviours' value='debt' checked=behaviours.includes('debt'))
    label(for='debt') debt 

  div.multiple-choice
    input(id='prolific' type='checkbox' name='abuseAndBehaviours' value='prolific' checked=behaviours.includes('prolific'))
    label(for='prolific') prolific

  div.multiple-choice
    input(id='offendingBehaviour' type='checkbox' name='abuseAndBehaviours' value='offending behaviour' checked=behaviours.includes('offending behaviour'))
    label(for='offendingBehaviour') offending behaviour
