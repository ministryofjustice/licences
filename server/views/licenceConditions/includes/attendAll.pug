- var professions = condition.user_submission && condition.user_submission.appointmentProfessions || []
div.govuk-fieldset
  div.multiple-choice
    input(id='psychiatrist' type='checkbox' name='appointmentProfessions' value='psychiatrist' checked=professions.includes('psychiatrist'))
    label(for='psychiatrist') Psychiatrist
  
  div.multiple-choice
    input(id='psychologist' type='checkbox' name='appointmentProfessions' value='psychologist' checked=professions.includes('psychologist'))
    label(for='psychologist') Psychologist

  div.multiple-choice
    input(id='medicalPractitioner' type='checkbox' name='appointmentProfessions' value='medical practitioner' checked=professions.includes('medical practitioner'))
    label(for='medicalPractitioner') Medical practitioner
