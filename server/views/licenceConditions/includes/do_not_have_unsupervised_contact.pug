  div.pure-u-1.multiple-choice
    input(id='do_not_unsupervised_male_child' type='radio' name='do_not_unsupervised_contact' value='any male child under' checked=condition.user_submission && condition.user_submission.do_not_unsupervised_contact === 'any male child under')
