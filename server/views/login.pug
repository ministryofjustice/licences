extends layout

block content
    if errors.length > 0
        div.error-summary(role="alert" aria-labelledby="error-summary-heading" tabindex="-1")
            h2.heading-medium.error-summary-heading.center.noMargin#error-summary-heading
                | #{errors[0]}

    div.pure-g
        div.pure-u-1.pure-u-md-1-3

            form(method='POST', class='form')
                input(type="hidden" name="_csrf" value=csrfToken)
                h1(class='form-title heading-large') Sign in
                .form-group
                    label.form-label(for='username') Username
                    input#username.form-control(name='username', type='text', data-element-id='username')
                .form-group
                    label.form-label(for='password') Password
                    input#password.form-control(name='password', type='password', data-element-id='password')

                button#submit.button.largeMarginBottom(type='submit', role='button', data-element-id="continue-button") Sign in
