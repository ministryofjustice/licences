extends ../layout

include ./additionalConditions
block content

    h1.heading-large Licence details

    div.largeMarginBottom

        include ../taskList/prisonerDetails

        if licence.proposedAddress && licence.proposedAddress.curfewAddress && licence.proposedAddress.curfewAddress.preferred
            include curfewAddress

        if licence.curfew && licence.curfew.curfewHours
            include curfewHours

        if licence.licenceConditions && licence.licenceConditions.length > 0
            h2.heading-medium.borderBottomLight Additional conditions
            +additionalConditions()

        if licence.risk && licence.risk.riskManagement
            include ./riskManagement

        if licence.reporting && licence.reporting.reportingInstructions
            include ./reportingInstructions

    div.paddingBottom.smallPaddingTop
        div.pure-u-1.inlineButtons
            a#continueBtn.button.button-primary.smallMarginTop(href="/hdc/taskList/" + nomisId role="button")
                | Save and continue
            a#backBtn.requiredButton.button.button-secondary.smallMarginTop(href="/hdc/taskList/" + nomisId role="button") Return to task list
