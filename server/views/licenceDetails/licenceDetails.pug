extends ../layout

include ./additionalConditions
block content

    h1.heading-large Licence details

    div.largeMarginBottom

        if licence.proposedAddress && licence.proposedAddress.curfewAddress
            include curfewAddress

        if licence.licenceConditions && licence.licenceConditions.length > 0
            h2.heading-medium.borderBottomLight Additional conditions
            +additionalConditions()

        if licence.risk && licence.risk.riskManagement
            include ./riskManagement


    div#continueBtns.paddingBottom
        div.pure-g
            div.pure-u-1.inlineButtons

                // TODO update link to send page
                a#continueBtn.requiredButton.button(href="/hdc/taskList/"+nomisId role="button") Continue

                a#backBtn.requiredButton.button.button-secondary(href="/hdc/taskList/"+nomisId role="button") Back to tasklist
