h2.heading-medium.borderBottom.separatorTitle Planned discharge address
div.grid-row
    div.column-two-thirds
        div.pure-g
            -var dischargeAddress = licence.dischargeAddress
            div.column-full
                div.borderBottomLight.smallPaddingTopBottom
                    div.grid-row
                        div.pure-u-1-3 Address
                        div#dischargeAddress.pure-u-2-3
                            if dischargeAddress.address1
                                span.block #{dischargeAddress.address1}
                            if dischargeAddress.address2
                                span.block #{dischargeAddress.address2}
                            if dischargeAddress.address3
                                span.block #{dischargeAddress.address3}
                            if dischargeAddress.postCode
                                span.block #{dischargeAddress.postCode}

            div.column-full
                div.borderBottomLight.smallPaddingTopBottom
                    div.grid-row
                        div.pure-u-1-3 Contact name
                        div#dischargeContactName.pure-u-2-3
                            if dischargeAddress.contact
                                | #{dischargeAddress.contact}

            div.column-full
                div.borderBottomLight.smallPaddingTopBottom
                    div.grid-row
                        div.pure-u-1-3 Contact number
                        div#dischargeContactNumber.pure-u-2-3
                            if dischargeAddress.contactNumber
                                | #{dischargeAddress.contactNumber}

            div.column-full
                div.borderBottomLight.smallPaddingTopBottom
                    div.grid-row
                        div.pure-u-1-3 Home address?
                        div#dischargeHomeAddress.pure-u-2-3
                            if dischargeAddress.homeAddress
                                | #{dischargeAddress.homeAddress}

            div.column-full
                div.borderBottomLight.smallPaddingTopBottom
                    div.grid-row
                        div.pure-u-1-3 Reason for request
                        div#dischargeReason.pure-u-2-3
                            if dischargeAddress.reason
                                | #{dischargeAddress.reason}
