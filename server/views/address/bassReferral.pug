extends ../layout

block content

    - var bassReferralValue = bassReferral ? bassReferral.bassReferralRequested : null;

    div.pure-g.pure-u-1
        div.back-link-container.smallPaddingTop
            a.link-back(href="javascript: window.history.back();") Back

        h2.heading-large BASS referral

    form(method="post")
        input(type="hidden" name="_csrf" value=csrfToken)
        input(type="hidden" name="nomisId" value=nomisId || '')
        div.smallPaddingTop.paddingBottom.largeMarginBottom

            div.largePaddingBottom
                div.form-group.inline
                    p Has the prisoner requested a BASS referral?

                    div.multiple-choice(data-target="bassReferralForm")
                        input#bassReferralYes(type="radio" checked=bassReferralValue === 'Yes'  name="bassReferralRequested" value="Yes")
                        label(for="bassReferralYes") Yes
                    div.multiple-choice
                        input#bassReferralNo(type="radio" checked=bassReferralValue === 'No' name="bassReferralRequested" value="No")
                        label(for="bassReferralNo") No

                div#bassReferralForm.panel.panel-border-narrow.js-hidden
                    include ./bassReferralForm

            div.paddingBottom.smallPaddingTop
                div.pure-u-1.inlineButtons
                    input#continueBtn.requiredButton.button(type="submit" value="Save and continue")
                    a#backBtn.requiredButton.button.button-secondary(href="/hdc/taskList/" + nomisId role="button") Return to tasklist
