extends ../layout

block content
    h1.heading-large Planned discharge address
    p The following addresses have been requested by the offender.

    div.grid-row.largeMarginBottom
        div#addressDetails.column-two-thirds.boxPanel
            div#address.column-one-third.midMarginBottom
                |Address one
                if (line1)
                    span#address1.block.bold #{line1}
                if (line2)
                    span.block.bold #{line2}
                if (line3)
                    span.block.bold #{line3}
                if (postCode)
                    span.block.bold #{postCode}

            div.column-one-third.midMarginBottom
                if (contact)
                    span.block.midMarginBottom
                        | Contact name
                        span#contact.block.bold #{contact}

                if (contactNumber)
                    span.block.midMarginBottom
                        | Contact number
                        span#contactNumber.block.bold #{contactNumber}

                span.block
                    | Home address?
                    span#homeAddress.block.bold
                        if (homeAddress)
                            | Yes
                        else
                            | No

            div.column-one-third.midMarginBottom
                | Reason for request
                if (reason)
                    span#reason.block.bold #{reason}

    form#acceptanceForm(method='POST')
        div.form-group
            fieldset.inline
                legend.midMarginBottom Is this address acceptable?

                div.multiple-choice
                    input(id="radioYes" type="radio" name="acceptable-address" value="Yes")
                    label(for="radioYes") Yes

                div.multiple-choice(data-target="addressForm")
                    input(id="radioNo" type="radio" name="acceptable-address" value="No")
                    label(for="radioNo") No

                div#addressForm.panel.panel-border-narrow.js-hidden
                    div.form-group
                        label.form-label(for="building") Building and street
                        input#building.midMarginBottom.form-control(name="building" type="text")
                        input#street.form-control.block(name="street" type="text")

                    div.form-group
                        label.form-label(for="town") Town or city
                        input#town.form-control(name="town" type="text")

                    div.form-group
                        label.form-label(for="postcode") Postcode
                        input#postcode.form-control.small(name="postcode" type="text")

                    div.form-group
                        label.form-label(for="telephone") Telephone
                        input#telephone.form-control.small(name="telephone" type="text")

        div#continueBtns.inlineButtons
            input(type="hidden" name="_csrf" value=csrfToken)
            input(type="hidden" name="licenceNumber" value=licenceNumber)
            input.requiredButton.button(type="submit" value="Continue")
            a.requiredButton.button.button-secondary(href="/dashboard" role="button") Back to dashboard
