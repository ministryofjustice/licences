div
  if !bassWithdrawn
    div.pure-g
      div.pure-u-1.pure-u-md-1-2
        p CAS2 offer withdrawn
        div
          form(method="post", name="withdrawBass", action="/hdc/bassReferral/bassOffer/withdraw/" + bookingId)
            input(type="hidden" name="_csrf" value=csrfToken)
            input(type="hidden" name="withdrawalType" value="offer")
            button#withdrawBassOffer.button.largeMarginBottom(type='submit', role='button', data-element-id="continue-button") Withdraw CAS2 request

      div.pure-u-1.pure-u-md-1-2
        p Offender has withdrawn CAS2 request
        div
          form(method="post", name="withdrawBass", action="/hdc/bassReferral/bassOffer/withdraw/" + bookingId)
            input(type="hidden" name="_csrf" value=csrfToken)
            input(type="hidden" name="withdrawalType" value="request")
            button#withdrawBassRequest.button.largeMarginBottom(type='submit', role='button', data-element-id="continue-button") Withdraw CAS2 request
  else
    div.pure-g
      div.pure-u-1.pure-u-md-1-2
        p Enter a new CAS2 request
        a#addNewBass.largeMarginBottom.button(href="/hdc/bassReferral/bassRequest/" + bookingId) Add a new CAS2 request

      div.pure-u-1.pure-u-md-1-2
        p Reinstate this request
        div
          form(method="post", name="withdrawBass", action="/hdc/bassReferral/bassOffer/reinstate/" + bookingId)
            input(type="hidden" name="_csrf" value=csrfToken)
            button#reinstateBass.button.largeMarginBottom(type='submit', role='button', data-element-id="continue-button") Reinstate CAS2 request
