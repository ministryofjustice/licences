extends ../layout
include ./includes/bassAddressForm
include ../includes/errorBannerWithDetailObject

block content

    -var bassRequest = data && data.bassRequest || {}
    -var bassOffer = data && data.bassOffer || {}

    div.pure-g.pure-u-1
        include ../includes/back
        include ../includes/personalDetailsSummary
        +errorBannerWithDetail(errorObject)

        h2.heading-large BASS area suitable

        div.pure-u-1-2
            | The following area was checked and accepted by the RO:

            div.paddingTop.paddingBottom
                div.pure-u-1-2
                    div Town
                    div.bold#proposedTown #{bassRequest.proposedTown}
                div.pure-u-1-2
                    div County
                    div.bold#proposedCounty #{bassRequest.proposedCounty}
        div.pure-u-1-2

        div.pure-u-1-2.smallPaddingTop
            | Please submit the request to the BASS team. When the response is received enter the details below.

        hr

        h2.heading-medium BASS request outcome

        div.pure-u-1-2.smallPaddingBottom
            | Has the offender been accepted for BASS in the area?

        form(method="post")
            input(type="hidden" name="_csrf" value=csrfToken)
            input(type="hidden" name="bookingId" value=bookingId || '')
            div.paddingBottom.largeMarginBottom

                div.form-group.smallPaddingTop
                    div.multiple-choice(data-target="bassAddressForm")
                        input#yes(type="radio" checked=bassOffer.bassAccepted === 'Yes' name="bassAccepted" value="Yes")
                        label(for="yes") Yes - offer made and property available

                    div#bassAddressForm(class="panel panel-border-narrow js-hidden")
                        +bassAddressForm

                    div.multiple-choice
                        input#waiting(type="radio" checked=bassOffer.bassAccepted === 'Waiting' name="bassAccepted" value="Waiting")
                        label(for="waiting") Yes - offer made and on waiting list
                    div.multiple-choice
                        input#unsuitable(type="radio" checked=bassOffer.bassAccepted === 'Unsuitable' name="bassAccepted" value="Unsuitable")
                        label(for="unsuitable") No - not suitable for BASS
                    div.multiple-choice
                        input#unavailable(type="radio" checked=bassOffer.bassAccepted === 'Unavailable' name="bassAccepted" value="Unavailable")
                        label(for="unavailable") No - address not available

            include ../includes/saveAndReturn


