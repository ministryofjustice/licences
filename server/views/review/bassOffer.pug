extends ../layout

block content

    -var bassOffer = data && data.bassReferral && data.bassReferral.bassOffer || {}
    -var bassRequest = data && data.bassReferral && data.bassReferral.bassRequest || {}

    div.pure-g.pure-u-1
        include ../includes/backToCheckList
        include ../includes/personalDetailsSummary

        h2.heading-medium BASS request outcome

        div.pure-g.midPaddingTopBottom

            div.pure-u-1.pure-u-md-1-3.paddingTop
                span Requested area
            div.pure-u-1.pure-u-md-2-3.paddingTop#bassRequest
                if bassRequest.proposedTown
                    div.bold #{bassRequest.proposedTown}
                if bassRequest.proposedCounty
                    div.bold #{bassRequest.proposedCounty}

            div.pure-u-1.pure-u-md-1-3.paddingTop
                span BASS outcome
            div.pure-u-1.pure-u-md-2-3.paddingTop#bassOfferStatus

                if licenceStatus.decisions.bassAreaNotSuitable
                    div.bold BASS area rejected

                -var offer = licenceStatus.decisions.bassAccepted
                if offer === 'Yes'
                    div.bold Offer made and property available
                else if offer === 'Waiting'
                    div.bold Offer made and on waiting list
                else if offer === 'Unsuitable'
                    div.bold Not suitable for BASS
                else if offer === 'Unavailable'
                    div.bold Address not available

            if bassOffer.bassAccepted == 'Yes'
                div.pure-u-1.pure-u-md-1-3.paddingTop
                    span Bass offer area
                div.pure-u-1.pure-u-md-2-3.paddingTop#bassOfferArea
                    if bassOffer.bassArea
                        div.bold #{bassOffer.bassArea}

                div.pure-u-1.pure-u-md-1-3.paddingTop
                    span Bass offer address
                div.pure-u-1.pure-u-md-2-3.paddingTop#bassOfferAddress
                    if bassOffer.addressLine1
                        div.bold #{bassOffer.addressLine1}
                    if bassOffer.addressLine2
                        div.bold #{bassOffer.addressLine2}
                    if bassOffer.addressTown
                        div.bold #{bassOffer.addressTown}
                    if bassOffer.postCode
                        div.bold #{bassOffer.postCode}
                    if bassOffer.telephone
                        div.bold #{bassOffer.telephone}



