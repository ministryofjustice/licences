extends ../layout

block content

  div.pure-g
    div.pure-u-1
      include ../includes/back

  div.pure-g.largePaddingBottom
    div.pure-u-1
      div.pure-u-2-3
        h2.heading-large.midPaddingBottom Responsible officer

      div.pure-u-1
        if (ro)
          div.pure-u-1
            table#contact.largeMarginBottom
              thead
                tr
                  th Name
                  th Local Delivery Unit
                  th Probation area
                  th Functional mailbox
              tbody
                tr.contact
                  td.name #{ro.name}
                  td.organisation #{ro.lduDescription} (#{ro.lduCode})
                  td #{ro.probationAreaDescription} (#{ro.probationAreaCode})
                  td.email #{functionalMailbox}

        else
          p No contact details found
