extends ../layout

block content

  div.pure-g
    div.pure-u-1
      include ../includes/back

  div.pure-g.largePaddingBottom
    div.pure-u-1
      div.purge-g
        div.pure-u-2-3
          h2.heading-large.midPaddingBottom Responsible officer

        div.pure-u-2-3
          if (ro)
            div.pure-u-1-3.sm-midPaddingBottom Name
            div.pure-u-2-3.bold #{ro.name}

            div.pure-u-1-3.sm-midPaddingBottom Staff code
            div.pure-u-2-3.bold #{ro.deliusId}

            div.pure-u-1-3.sm-midPaddingBottom Staff identifier
            div.pure-u-2-3.bold #{ro.staffIdentifier}

            div.pure-u-1-3.sm-midPaddingBottom Local Delivery Unit
            div.pure-u-2-3.bold #{ro.lduDescription} (#{ro.lduCode})

            div.pure-u-1-3.sm-midPaddingBottom Probation area
            div.pure-u-2-3.bold #{ro.probationAreaDescription} (#{ro.probationAreaCode})

            div.pure-u-1-3.sm-midPaddingBottom Email
            div.pure-u-2-3.bold #{email}

            div.pure-u-1-3.sm-midPaddingBottom Functional mailbox
            div.pure-u-2-3.bold #{functionalMailbox}

          else
            p No contact details found
