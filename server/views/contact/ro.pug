extends ../layout

block content

    div.pure-g
        div.pure-u-1
            include ../includes/back

    div.pure-g.largePaddingBottom
        div.pure-u-1.pure-u-2-3
            h2.heading-large.midPaddingBottom Responsible officer

            if (contact)
                div.pure-u-1
                    table#contact.largeMarginBottom
                        thead
                            tr
                                th Name
                                th Organisation
                                th Job Role
                                th Email
                                th Telephone
                        tbody
                            tr.contact
                                td.name #{contact.first_name} #{contact.last_name}
                                td.organisation #{contact.organisation}
                                td.jobRole #{contact.job_role}
                                td.email #{contact.email}
                                td.telephone #{contact.telephone}

            else
                p No contact details found

