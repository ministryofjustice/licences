extends ../layout

block content

  div.pure-g
    div.pure-u-1
      include ../includes/back

  div.pure-g.largePaddingBottom
    div.pure-u-1
      div.pure-g
        div.pure-u-2-3
          h2.heading-large.midPaddingBottom Community Offender Manager

        div.pure-u-1
          if (contact)
            div.pure-u-2-3

              div.pure-u-1-3.sm-midPaddingBottom Name
              div.pure-u-2-3.bold #{contact.first} #{contact.last}

              div.pure-u-1-3.sm-midPaddingBottom Role
              div.pure-u-2-3.bold #{contact.jobRole}

              div.pure-u-1-3.sm-midPaddingBottom Email
              div.pure-u-2-3.bold #{contact.email}

              div.pure-u-1-3.sm-midPaddingBottom Telephone
              div.pure-u-2-3.bold #{contact.telephone}

              div.pure-u-1-3.sm-midPaddingBottom Organisation
              div.pure-u-2-3.bold #{contact.organisation}

              div.pure-u-1-3.sm-midPaddingBottom Org Email
              div.pure-u-2-3.bold #{contact.orgEmail}

          else
            p No contact details found



