extends ../layout

block content

  div.pure-g
    div.pure-u-1
      include ../includes/back

  div.pure-g.largePaddingBottom
    div.pure-u-1
      div.pure-u-2-3
        h2.heading-large.midPaddingBottom Responsible officer

      div.pure-u-1
        if (contact)
          div.pure-u-1
            table#contact.largeMarginBottom
              thead
                tr
                  th Name
                  th Email
                  th Local Delivery Unit
                  th Functional mailbox
              tbody
                tr.contact
                  td.name #{contact.first} #{contact.last}
                  td.email #{contact.email}
                  td.organisation #{contact.organisation}
                  td.email #{contact.orgEmail}

        else
          p No contact details found



